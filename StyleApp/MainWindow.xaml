<Window x:Class="StyleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StyleApp"
        mc:Ignorable="d"
        Title="StyleButtonsApp" Height="450" Width="800" MinHeight="200" MinWidth="200" MaxHeight="1000" MaxWidth="1920" Style="{StaticResource MainWindow}" Icon="Assets/Image/Luffi-iz-van-pis-400x400.jpg">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="TextBlock" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource Orbitron}"/>
            <Button Content="Normal"/>
        </StackPanel>
    </Grid>
</Window>

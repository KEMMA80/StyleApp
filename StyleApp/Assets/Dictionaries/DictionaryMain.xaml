<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="Orbitron">../Fonts/Orbitron-VariableFont_wght.ttf#Orbitron VariableFont_wght</FontFamily>
    <Style TargetType="Window" x:Key="MainWindow">
        <Setter Property="Background" Value="#d92b04"/>
        <Setter Property="BorderBrush" Value="black"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="TextBlockText">
        <Setter Property="FontFamily" Value="{StaticResource Orbitron}"/>

    </Style>
</ResourceDictionary>